{
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [
		{
			"path": "pages/firstPage/firstPage",
			"style": {
				"h5": {
					"titleNView": {
						"backgroundColor": "#F67220",
						"titleText": "联通优选",
						"titleColor": "#FFFFFF",
						"titleSize": "36rpx",
						"buttons": [{
							"float": "right",
							"type": "menu",
							"width": "86rpx"
						}]
					}
				}
			}
		},
		// avatarCropper-头像裁剪
		{
			"path": "uview-ui/components/u-avatar-cropper/u-avatar-cropper",
			"style": {
				"navigationBarTitleText": "头像裁剪",
				"navigationBarBackgroundColor": "#000000"
			}
		},
		{
			"path": "pages/shop/shop",
			"style": {
				"h5": {
					"titleNView": {
						"backgroundColor": "#F67220",
						"titleText": "联盟商家",
						"titleColor": "#FFFFFF"
					}
				}
			}
		},
		{
			"path": "pages/car/car",
			"style": {
				"h5": {
					"titleNView": {
						"backgroundColor": "#F67220",
						"titleText": "购物车",
						"titleColor": "#FFFFFF"
					}
				}
			}
		},
		{
			"path": "pages/my/my",
			"style": {
				"h5": {
					"titleNView": {
						"backgroundColor": "#F67220",
						"titleText": "个人中心",
						"titleColor": "#FFFFFF"
					}
				}
			}
		},
		// fullScreen-压窗屏
		{
			"path": "uview-ui/components/u-full-screen/u-full-screen",
			"style": {
				"navigationStyle": "custom",
				"app-plus": {
					"animationType": "fade-in",
					"background": "transparent",
					"backgroundColor": "rgba(0,0,0,0)",
					"popGesture": "none"
				}
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uView",
		"navigationBarBackgroundColor": "#FFFFFF",
		"backgroundColor": "#FFFFFF"
	},
	"tabBar": {
		"color": "#999999",
		"selectedColor": "#F67220",
		"backgroundColor": "#FFFFFF",
		"borderStyle": "black",
		"fontSize": "20rpx",
		"iconWidth": "40rpx",
		"list": [{
				"pagePath": "pages/firstPage/firstPage",
				"iconPath": "static/imgs/home_dark.png",
				"selectedIconPath": "static/imgs/home_light.png",
				"text": "优选首页"
			},
			{
				"pagePath": "pages/shop/shop",
				"iconPath": "static/imgs/mar_dark.png",
				"selectedIconPath": "static/imgs/mar_light.png",
				"text": "联盟商家"
			},
			{
				"pagePath": "pages/car/car",
				"iconPath": "static/imgs/car_dark.png",
				"selectedIconPath": "static/imgs/car_light.png",
				"text": "购物车"
			},
			{
				"pagePath": "pages/my/my",
				"iconPath": "static/imgs/my_dark.png",
				"selectedIconPath": "static/imgs/my_light.png",
				"text": "个人中心"
			}
		]
	}
}
